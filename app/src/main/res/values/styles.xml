<resources>

    <style name="PopupAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="PopDownAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="round">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="controls" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#FFC107</item>
        <item name="android:max">100</item>
        <item name="android:progress">10</item>
        <item name="android:progressDrawable">@drawable/pause</item>
    </style>

</resources>